<h1><%= @recipe.title %></h1>
<h3>Detalhes</h3>
<p><%= @recipe.recipe_type.name %></p>
<p><%= @recipe.difficulty %></p>
<p><%= @recipe.cuisine.name %></p>
<p><%= @recipe.cook_time %> minutos</p>
<h3>Ingredientes</h3>
<p><%= @recipe.ingredients %></p>
<h3>Como Preparar</h3>
<p><%= @recipe.method %></p>

<div>
  <%= link_to 'Editar Receita', edit_recipe_path(@recipe.id) %>
</div>
<div>
  <%= link_to 'Excluir Receita', @recipe, method: :delete%>
</div>

<%= link_to 'Voltar', root_path %>
